{% extends 'base.html.twig' %}

{% block title %}ARTISTES{% endblock %}

{% block body %}
    <h1 class="display-4 text-center">LISTE DES ARTISTES</h1>
    <table class="table text-center table-bordered" >
        <thead class="thead-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">description</th>
            </tr>
        </thead>
        <tbody>
        {% for artiste in liste_artistes %}
            <tr>
                <td> {{ artiste.id }} </td>
                <td> {{ artiste.name }} </td>
                <td> {{ artiste.description }} </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <form>
        <div class="form-group">
            <label for="nom">Nom</label>
            <input type="text" class="form-control" id="nom" name="nom"  placeholder="Enter nom">
        </div>
        <div class="form-group">
            <label for="Description">Description</label>
            <textarea type="password" name="description" class="form-control" id="description" placeholder="description"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Enregistrer</button>
    </form>
    
{% endblock %}


