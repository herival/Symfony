{# variable app permet de récupérer des informations sur le projet  #}
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">Symfony 4</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
            <a class="nav-item nav-link" href="{{ path('home') }}">Acceuil</a>
            <a class="nav-item nav-link" href="/calcul2/15">Calcul</a>
            {# afficher en admin  #}
            {% if is_granted("ROLE_ADMIN") %} 
            <a class="nav-item nav-link" href="{{ path('artist') }}">Artist</a>
            <a class="nav-item nav-link" href="{{ path('record') }}">Record</a>
            <a class="nav-item nav-link" href="{{ path('liste_utilisateurs') }}">Utilisateurs</a>
            {% endif %}
            {# afficher si connecter tout simplement  #}
            {% if is_granted("IS_AUTHENTICATED_FULLY") %}
            <a class="nav-item nav-link" href="{{ path('profil') }}"><i class="fas fa-user"></i></i> {{ app.user.email }}</a>
            <a class="nav-item nav-link" href="{{ path('app_logout') }}"><i class="fas fa-sign-out-alt"></i> Deconnexion</a>
            {% else %}
            <a class="nav-item nav-link" href="{{ path('app_register') }}"><i class="fas fa-user-plus"></i> Inscription</a>
            <a class="nav-item nav-link" href="{{ path('app_login') }}"><i class="fas fa-sign-in-alt"></i> Connexion</a>
            {% endif %}
            </div>
        </div>
        <form class="form-inline my-2 my-lg-0" action="{{ path('search') }}" method="GET">
            <input class="form-control mr-sm-2" type="search" placeholder="Recherche..." name="mot" aria-label="Rechercher">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Rechercher</button>
         </form>
    </nav>
